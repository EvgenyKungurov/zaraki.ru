<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="title"><%= link_to post.title.html_safe, post %></td>
        <% if can_do_it? %>
          <td class="edit"><p><%= link_to 'Edit', edit_post_path(post) %></p></td>
          <td><p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @posts %>
<% if can_do_it? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
