<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.cktext_area :title, :ckeditor => {:toolbar => 'full'}  %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.cktext_area :content, :ckeditor => {:toolbar => 'full'} %>
  </div>

  <br>

  <div class="field">
    <%= f.label :post_type %>
    <%= f.select(:post_type, options_for_select([['Post everything', 0], ['Cheat Sheet Post', 1]], f.object.post_type)) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
